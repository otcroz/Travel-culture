<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@drawable/corner_all_radius"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingVertical="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/itemUserImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/ic_launcher"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/itemNicknameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#212121"
            android:layout_gravity="center_vertical"
            android:text="닉네임"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/itemDateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="날짜"
            android:layout_gravity="center_vertical"
            android:textColor="#727272"
            android:textSize="12sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/itemImageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/rec_area_location"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:orientation="horizontal"
        android:background="@drawable/input_rectangle_box"
        android:layout_margin="10dp"
        android:padding="16dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_pin_drop_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/rec_post_residence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:hint="장소" />
            <TextView
                android:id="@+id/rec_post_locate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                android:hint="위치" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/itemContentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:lineSpacingExtra="2dp"
        android:paddingLeft="15dp"
        android:textColor="#212121"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:background="#40000000" />

</LinearLayout>