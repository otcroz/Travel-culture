<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/ic_splash_logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="로그인하기"
        android:textSize="30dp"
        android:fontFamily="@font/mapoflowerisland"
        android:textFontWeight="900"
        android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/authEmailEditView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:layout_marginHorizontal="16dp"
        android:inputType="textWebEmailAddress"
        android:textSize="22dp"
        android:fontFamily="@font/mapoflowerisland"
        android:background="@drawable/input_rectangle_box"
        android:padding="12dp"
        android:hint="이메일"/>

    <EditText
        android:id="@+id/authPasswordEditView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:layout_marginHorizontal="16dp"
        android:inputType="textPassword"
        android:textSize="22dp"
        android:fontFamily="@font/mapoflowerisland"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_rectangle_box"
        android:padding="12dp"
        android:hint="비밀번호"/>

    <TextView
        android:id="@+id/re_enter_id_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="16dp"
        android:text="아이디와 비밀번호를 입력하세요."
        android:textColor="#ff0000"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="16dp"
        android:text="로그인"
        android:textSize="24dp"
        android:fontFamily="@font/mapoflowerisland"
        android:backgroundTint="@color/main_color"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10pt"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"
            android:textSize="17dp"
            android:fontFamily="@font/mapoflowerisland"
            android:layout_marginRight="5pt"
            android:layout_gravity="right" />

        <TextView
            android:id="@+id/goto_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입하기"
            android:fontFamily="@font/mapoflowerisland"
            android:textSize="17dp"
            android:layout_gravity="center" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="간편 로그인"
        android:textFontWeight="900"
        android:fontFamily="@font/mapoflowerisland"
        android:layout_marginTop="10dp"
        android:textSize="14dp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/kakaoLoginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="16dp"
        android:text="카카오로 로그인"
        android:fontFamily="@font/mapoflowerisland"
        android:textSize="18dp"
        android:textColor="#664500"
        android:backgroundTint="#FFCC4D"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:text="페이스북으로 로그인"
        android:fontFamily="@font/mapoflowerisland"
        android:layout_marginHorizontal="16dp"
        android:textSize="18dp"
        android:backgroundTint="#226699"/>

</LinearLayout>